<p id="notice"><%= notice %></p>

<% if @article.photos.first.present? %>
  <% @article.photos.each do |photo| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path photo.key, height: 300, crop: :fill %>')">
      Cool article
    </div>
  <% end %>
<% else %>
 <h1>There is no photo!</h1>
<% end %>
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', root_path %>
